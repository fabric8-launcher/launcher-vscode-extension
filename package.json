{
    "name": "fabric8-launcher-vscode-extension",
    "displayName": "Launcher Support by Red Hat",
    "description": "A lightweight extension based on Fabric8 Launcher to generate quickstart projects using VSCode",
    "version": "0.0.7",
    "license": "EPL-1.0",
    "publisher": "redhat",
    "author": "Red Hat",
    "icon": "icons/fabric8.png",
    "homepage": "https://github.com/fabric8-launcher/launcher-vscode-extension/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/fabric8-launcher/launcher-vscode-extension"
    },
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:fabric8.launcher.generate"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "fabric8.launcher.generate",
            "title": "Generate a project from Fabric8 launcher",
            "category": "Fabric8"
        }],
        "configuration": {
            "title": "Fabric8 launcher",
            "properties": {
              "fabric8.launcher.endpointUrl": {
                "default": "https://forge.api.openshift.io/api/",
                "type": "string",
                "pattern": "https?://.*/",
                "scope": "window",
                "description": "Fabric8 launcher endpoint URL."
              },
              "fabric8.launcher.defaultGroupId": {
                "default": "io.openshift",
                "type": "string",
                "scope": "window",
                "description": "Default value for Group Id."
              },
              "fabric8.launcher.defaultArtifactId": {
                "default": "booster",
                "type": "string",
                "scope": "window",
                "description": "Default value for Artifact Id."
              },
              "fabric8.launcher.defaultVersion": {
                "default": "0.0.1-SNAPSHOT",
                "type": "string",
                "scope": "window",
                "description": "Default value for Version."
              }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/request": "^2.47.0",
        "request": "^2.47.0",
        "yauzl":"^2.10.0",
        "@types/yauzl":"^2.9.0"
    }
}
